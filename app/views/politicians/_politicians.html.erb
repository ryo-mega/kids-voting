<% if politicians.any? %>
  <ul class="list-unstyled">
    <% politicians.each do |politician| %>
      <li class="media">
        <img class="mr-2 rounded" src="<%#= gravatar_url(politician, { size: 50 }) %>" alt="">
        <%# if current_user.admin? && !current_user?(user) %>
          <%#= link_to "delete", user, method: :delete,
                                      #data: { confirm: "You sure?" } %>
        <%# end %>
        <div class="media-body">
          <div>
            <%= politician.name %>
          </div>
          <div>
            <p><%#= link_to 'View profile', politician_path(politician) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate politicians %>
<% end %>