<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'layouts/error_messages' %>
      
      <div class="form-group">
        <%= f.label :name, 'ユーザーネーム' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :email, 'メールアドレス' %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :age, '年齢' %>
        <%= f.number_field :age, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :gender, '性別' %>
        <%= f.select :gender, ['M', 'F', 'X'], { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
      </div>

    　<div class="form-group">
        <%= f.label :residence, '居住地' %>
        <%= f.collection_select :residence_id, Prefecture.all, :id, :name, include_blank: '選択してください', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password, 'パスワード' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, 'パスワードの確認' %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>

      <%= f.submit 'Update!!', class: 'btn btn-primary btn-block' %>
    <% end %>
    
    <!--<div class="gravatar_edit">
      <#%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target="_blank">change</a>
    </div>-->
  </div>
</div>
    